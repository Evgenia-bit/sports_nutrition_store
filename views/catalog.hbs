<!DOCTYPE html>
<html lang="en">
<head>
    <title>MyProtein - каталог</title>
    <link rel="stylesheet" type="text/css" href="styles/bootstrap-4.1.3/bootstrap.css">
    <link href="plugins/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" type="text/css" href="/styles/main_styles.css">
    <link rel="stylesheet" type="text/css" href="styles/categories.css">
    <link rel="stylesheet" type="text/css" href="styles/categories_responsive.css">
    <link href="/plugins/toast/toast.min.css" rel="stylesheet">
</head>
    <body>
        <div class="super_container">
            {{> header}}
            {{> menu}}
            {{> sidebar}}
            <div class="home">
                    <div class="parallax_background parallax-window" data-parallax="scroll" data-image-src="images/product_background.jpg" data-speed="0.8"></div>
                    <div class="home_container">
                        <div class="home_content">
                            <div class="home_title">Каталог</div>
                            <div class="breadcrumbs">
                                <ul class="d-flex flex-row align-items-center justify-content-start">
                                    <li><a href="/">Главная</a></li>
                                    <li><a href="/categories">Категории</a></li>
                                    <li>{{categoryName}}</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            <div class="products">
                    <div class="products_bar">
                        <div class="section_container">
                            <div class="container">
                                <div class="row">
                                    <div class="col">
                                        <div class="products_bar_content d-flex flex-column flex-xxl-row align-items-start align-items-xxl-center justify-content-start">
                                            <div class="product_categories">
                                                <h2>{{categoryName}}</h2>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="section_container">
                        <div class="container">
                            <div class="row">
                                <div class="col">
                                    <div class="products_container grid">
                                        {{#each products}}
                                            <div class="product grid-item hot">
                                                <div class="product_inner">
                                                    <a href="/product{{this.id}}">
                                                        <div class="product_image">
                                                            <img src="images/products/{{this.img}}" alt="">
                                                        </div>
                                                    </a>
                                                    <div class="product_content text-center">
                                                        <div class="product_title">{{this.name}}</div>
                                                        <div class="product_price">{{this.price}}</div>руб.
                                                        <div class="product_button add-to-cart-btn ml-auto mr-auto trans_200" data-prodId="{{this.id}}">В корзину</div>
                                                    </div>
                                                </div>
                                            </div>
                                        {{/each}}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {{> footer}}
        </div>
        <script type="module" src="/js/add_to_cart.js"></script>
        <script src="/plugins/toast/toast.min.js"></script>
        <script src="/js/jquery-3.2.1.min.js"></script>
        <script src="/plugins/parallax-js-master/parallax.min.js"></script>
        <script src="/plugins/Isotope/isotope.pkgd.min.js"></script>
        <script src="/js/menu.js"></script>
        <script src="/js/catalog.js"></script>
    </body>
</html>